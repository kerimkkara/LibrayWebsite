
@model List<DbFinal.Models.usp_AdministratorList_Result>
@{
    ViewBag.Title = "Admin Listesi";
}


<h2>Admin Listesi</h2>

<div class="row"  style="padding-bottom: 10px;">
    <a href="/Home/CreateAdmin" class="btn btn-success pull-right btn-sm">Admin Ekle</a>
</div>

<div class="row">
    <div class="table-responsive">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th class="text-center">#</th>
                    <th class="text-center">Admin Adı</th>
                    <th class="text-center">Admin Soyadı</th>
                    <th class="text-center">Admin Kullanıcı Adı</th>
                    <th class="text-center">Admin Şifre</th>
                    <th class="text-center" style="width: 240px;">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count() > 0)
                {
                    int sayac = 0;
                    foreach (var item in Model)
                    {
                        sayac++;
                        <tr>
                            <td class="text-center"><b>@sayac</b></td>
                            <td class="text-center">@item.administratorName </td>
                            <td class="text-center">@item.administratorSurname </td>
                            <td class="text-center">@item.administratorUsername </td>
                            <td class="text-center">@item.administratorPassword </td>
                            <td class="text-center">
                                <a href="/Home/DeleteAdmin?id=@item.administratorId" class="btn btn-danger btn-sm">Sil</a>
                                <a href="/Home/EditAdmin?id=@item.administratorId" class="btn btn-primary btn-sm">Düzenle</a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="8">Kayıt bulunamadı</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>




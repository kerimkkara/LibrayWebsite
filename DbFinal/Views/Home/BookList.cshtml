
@model List<DbFinal.Models.usp_Book_Result>
@{
    ViewBag.Title = "Kitap Listesi";
}


<h2>Kitap Listesi</h2>

<div class="row" style="padding-bottom: 10px;">
    <a href="/Home/CreateBook" class="btn btn-success pull-right btn-sm">Kitap Ekle</a>
</div>

<div class="row">
    <div class="table-responsive">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th class="text-center">#</th>
                    <th class="text-center">Kitap Adı</th>
                    <th class="text-center">Yayınevi </th>
                    <th class="text-center">Kategori</th>
                    <th class="text-center">Yazar</th>
                    <th class="text-center" style="width: 240px;">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count() > 0)
                {
                    int sayac = 0;
                    foreach (var item in Model)
                    {
                        sayac++;
                        <tr>
                            <td class="text-center"><b>@sayac</b></td>
                            <td class="text-center">@item.bookName  </td>
                            <td class="text-center">@item.publicationName </td>
                            <td class="text-center">@item.categoryName </td>
                            <td class="text-center">@item.authorName  @item.authorSurname</td>

                            <td class="text-center">
                                <a href="/Home/DeleteBook?id=@item.bookId" class="btn btn-danger btn-sm">Sil</a>
                                <a href="/Home/EditBook?id=@item.bookId" class="btn btn-primary btn-sm">Düzenle</a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="8">Kayıt bulunamadı</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>



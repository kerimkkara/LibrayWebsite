@model List<DbFinal.Models.usp_LendId_Result>
@{
    DbFinal.Models.LibrayDatabaseEntities ent = new DbFinal.Models.LibrayDatabaseEntities();
    ViewBag.Title = "Düzenle";
}
<button type="submit" onclick="window.location.href = 'LendList';" class="btn btn-warning float-right">Geri Dön</button>
<div class="row">


    
    <form method="post" action="/Home/EditLend" enctype="multipart/form-data">

        @if (Model.Count() > 0)
        {
            int sayac = 0;
            foreach (var item in Model)
            {
                sayac++;

                <input name="lendId" type="hidden" id="lendId" value="@item.lendId" />


                <div class="form-group">
                    <label for="LendTime">Veriliş Tarihi :</label>
                    <input type="text" placeholder="mm-dd-yyyy" class="form-control" name="lendTime" id="lendTime" value="@item.lendTime" />

                </div>

                <div class="form-group">
                    <label for="LendLength">Veriliş Süresi :</label>
                    <input type="text" placeholder="mm-dd-yyyy" class="form-control" name="lendLength" id="lendLength" value="@item.lendLength" />

                </div>

                <div class="form-group">
                    <label for="Book_ID" class="control-label"> Kitap Seçiniz :</label>
                    <select class="form-control" name="bookId" id="Book_ID">
                        @foreach (var itemBook in ent.usp_BookList())
                        {
                            <option value="@itemBook.bookId">@itemBook.bookName </option>
                        }
                    </select>
                </div>


                <div class="form-group">
                    <label for="Member_ID" class="control-label">Üye Seçiniz :</label>
                    <select class="form-control" name="memberId" id="Member_ID">
                        @foreach (var itemMember in ent.usp_MemberList())
                        {
                            <option value="@itemMember.memberId">@itemMember.memberName  @itemMember.memberSurname</option>
                        }
                    </select>
                </div>


                <button type="submit" class="btn btn-success">Kaydet</button>

            }
        }
        else
        {

        }
    </form>

</div>

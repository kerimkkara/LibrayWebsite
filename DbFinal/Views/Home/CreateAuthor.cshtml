@model DbFinal.Models.Author
@{

    ViewBag.Title = "Yazar Ekle";
}


<button type="submit" onclick="window.location.href = 'AuthorList';"  class="btn btn-warning float-right">Geri Dön</button>

<div class="row">

    <form method="post" action="/Home/CreateAuthor">

        <div class="form-group">
            <label for="author_name">Yazar Adı :</label>
            <input type="text" class="form-control" name="authorName" id="author_name" />
        </div>

        <div class="form-group">
            <label for="author_surname">Yazar Soyadı :</label>
            <input type="text" class="form-control" name="authorSurname" id="author_surname" />
        </div>

        <button type="submit" class="btn btn-success">Kaydet</button>
    </form>

</div>


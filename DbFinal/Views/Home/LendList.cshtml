
@model List<DbFinal.Models.usp_Lend_Result>
@{
    ViewBag.Title = "Ödünç Verme Listesi";
}


<h2>Ödünç Verme Listesi</h2>

<div class="row" style="padding-bottom: 10px;">
    <a href="/Home/CreateLend" class="btn btn-success pull-right btn-sm">Ekle</a>
</div>

<div class="row">
    <div class="table-responsive">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th class="text-center">#</th>
                    <th class="text-center">Kitap Adı</th>
                    <th class="text-center">Üye Adı Soyadı</th>
                    <th class="text-center">Tarih</th>
                    <th class="text-center">Süre</th>

                    <th class="text-center" style="width: 240px;">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count() > 0)
                {
                    int sayac = 0;
                    foreach (var item in Model)
                    {
                        sayac++;
                        <tr>
                            <td class="text-center"><b>@sayac</b></td>
                            <td class="text-center">@item.bookName</td>
                            <td class="text-center">@item.memberName @item.memberSurname</td>
                            <td class="text-center">@item.lendTime </td>
                            <td class="text-center">@item.lendLength </td>
                            <td class="text-center">
                                <a href="/Home/DeleteLend?id=@item.lendId" class="btn btn-danger btn-sm">Sil</a>
                                <a href="/Home/EditLend?id=@item.lendId" class="btn btn-primary btn-sm">Düzenle</a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="8">Kayıt bulunamadı</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


